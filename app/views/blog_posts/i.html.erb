<%= link_to_unless_current "7",
blog_posts_path(items: 7),
class: "rounded-lg py-3 px-5 bg-blue-600
1text-white block font-medium" %>
<% if @pagy.count > @pagy.items %>
<div class="mt-10">
  <%= pagy_nav(@pagy) %>
</div>
<% end %>

<div id="blog_posts">
  <% @blog_posts.each do |blog_post| %>
    <%= render blog_post %>
    <p>
      <%= link_to "Show this blog post", blog_post %>
    </p>
  <% end %>
</div>
<p style="color: green"><%= notice %></p>

<h1>Blog posts</h1>
